<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.instafood.ConfirmationActivity">

    <TextView
        android:text="Confirmed! Your invite has been sent to:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109dp"
        android:id="@+id/textView2"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="109dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/bill_gates"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/torvalds"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/feynman"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:text="Bill Gates"
            android:scaleType="fitXY"
            android:src="@drawable/bill_gates"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Linus Torvolds"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/torvalds"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Richard Fineman"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/feynman"/>
    </LinearLayout>

</LinearLayout>
